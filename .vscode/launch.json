{
    "configurations": [
    {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "pwa-chrome",
        "webRoot": "${workspaceFolder}"
    },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        
    {
        "type": "node",
        "request": "launch",
        "name": "Launch API",
        "runtimeExecutable": "deno",
        "runtimeArgs": ["run", "--inspect-brk", "--allow-read", "--allow-run", "--allow-net", "-A", "${workspaceFolder}/API/index.ts"],
        "envFile": "${workspaceFolder}/.env",
        "outputCapture": "std",
        "port": 9229,
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
    {
        "type": "python",
        "request": "launch",
        "name": "Launch python script",
        "program": "${file}"
    }
    ]
}