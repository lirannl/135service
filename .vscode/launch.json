{
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Denon",
            "program": "${workspaceFolder}/API/index.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "outputCapture": "std",
            "restart": true,
            "runtimeArgs": [
                "run",
                "--inspect-brk=127.0.0.1:9229",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "urlFilter": "localhost*",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Launch python script",
            "program": "${file}",
            "args": [
                "-h"
            ]
        }
    ]
}